<!DOCTYPE html>
<html lang="pt-br">

<%- include partials/head.ejs %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <body>
        <%- include partials/headerAreaRestritaUsuarios.ejs %>
            <main>
                <h1>Meu Perfil</h1>

                <form action="/dashboardUsuario/alterandoDados" method="POST">
                    <div class="form-group">
                        <div class="form-control">
                            <!-- //<img class="du-meuPerfil-info-secao-icone" src="../img/user.png" alt="ícone usuario"> -->
                            <div>
                                <h6>Nome</h6>
                                <input type="text" class="form-control" name="nome" placeholder="nome"
                                    value="<%=dadosUsuario.nome%>" style="width: 100px;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-control">
                            <!-- <img class="du-meuPerfil-info-secao-icone" src="../img/icone_email.png" alt="ícone email"> -->
                            <div>
                                <h6>Email</h6>
                                <input type="text" class="form-control" name="email" placeholder="E-mail"
                                    value="<%=dadosUsuario.email%>" style="width: 100px;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-control">
                            <!-- <img class="du-meuPerfil-info-secao-icone" src="../img/driver-license.png" alt="ícone documento"> -->
                            <div>
                                <h6>CPF / CNPJ</h6>
                                <input type="text" class="form-control" name="cpfCnpj" placeholder="CPF ou CNPJ"
                                    value="<%=dadosUsuario.cpfCnpj%>" style="width: 100px;">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-control">
                            <!-- <img class="du-meuPerfil-info-secao-icone" src="../img/phone.png" alt="ícone telefone"> -->
                            <div>
                                <h6>Telefone</h6>
                                <input type="text" class="form-control" name="telefone" placeholder="Telefone"
                                    value="<%=dadosUsuario.telefone%>" style="width: 100px;">
                            </div>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-dark" value="Salvar Alterações">
                </form>

                <h6 class="du-meuPerfil-info-rodape">Precisa alterar sua senha? <a
                        href="/dashboardUsuario/alteraSenha">Clique aqui</a></h6>
                </div>

            </main>

            <!-- Footer -->
            <%- include partials/footer.ejs %>

    </body>

</html>